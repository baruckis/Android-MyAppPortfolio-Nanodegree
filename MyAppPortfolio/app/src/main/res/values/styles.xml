<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="General" />

    <style name="General.LaunchAppButton">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="General.LaunchCapstoneAppButton" parent="General.LaunchAppButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LaunchAppButton" parent="General.LaunchAppButton">
        <item name="android:background">@color/udacious_orange</item>
    </style>

    <style name="LaunchCapstoneAppButton" parent="General.LaunchCapstoneAppButton">
        <item name="android:background">@color/udacious_red</item>
    </style>

</resources>
